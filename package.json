{
  "name": "@openclaw/security-watchdog",
  "version": "0.1.0",
  "description": "Security layer for OpenClaw to prevent AI data leakage",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "db:init": "tsx scripts/init-db.ts",
    "db:seed": "tsx scripts/seed-db.ts",
    "db:seed-patterns": "tsx scripts/seed-patterns.ts",
    "generate": "tsx tools/orchestrator.ts"
  },
  "keywords": [
    "openclaw",
    "security",
    "pii",
    "data-protection",
    "ai-safety"
  ],
  "author": "Henry Warner",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^11.0.0",
    "fuse.js": "^7.0.0",
    "pino": "^9.0.0",
    "pino-pretty": "^11.0.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.6.0",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
